<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/faintPink"
    tools:context=".ui.Dh1airya.Dh1airya">

    <TextView
        android:id="@+id/dhaTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="@string/full_name_studentid"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/darkRed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="100dp" />

    <Spinner
        android:id="@+id/dhaSpinner"
        android:entries="@array/spinner_items"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginHorizontal="100dp"
        app:layout_constraintTop_toBottomOf="@id/dhaTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/dhaButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/download_image"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toBottomOf="@id/dhaSpinner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/dhaImageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.8"
        app:layout_constraintDimensionRatio="16:9"
        android:src="@drawable/scene"
        android:layout_marginTop="200dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dhaButton" />

    <ProgressBar
        android:id="@+id/dhaProgressBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dhaButton"
        android:layout_marginTop="270dp"
        android:scaleY="3"
        android:scaleX="3"
        android:indeterminateTint="@color/purple_500"
        android:visibility="gone" />

</androidx.constraintlayout.widget.ConstraintLayout>